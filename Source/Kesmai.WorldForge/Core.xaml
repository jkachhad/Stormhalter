<Application x:Class="Kesmai.WorldForge.Core"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:presenters="clr-namespace:Kesmai.WorldForge.Editor"
             xmlns:worldForge="clr-namespace:Kesmai.WorldForge"
             xmlns:ui="clr-namespace:Kesmai.WorldForge.UI"

             ShutdownMode="OnMainWindowClose"
			 
             StartupUri="UI\ApplicationWindow.xaml">
    <Application.Resources>
        <presenters:ApplicationPresenter x:Key="applicationPresenter" />
        
        <worldForge:RegionToolbar x:Key="regionToolbar" />
        <worldForge:RegionFilters x:Key="regionFilters" />
        <worldForge:RegionVisibility x:Key="regionVisibility" />
        
        <worldForge:ComponentImageCache x:Key="componentImageCache" />
        <worldForge:ComponentPalette x:Key="componentPalette" />
        
        <worldForge:ObjectToTypeConverter x:Key="objectToTypeConverter" />
    </Application.Resources>
</Application>

