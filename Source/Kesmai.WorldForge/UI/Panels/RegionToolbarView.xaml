<UserControl x:Class="Kesmai.WorldForge.UI.RegionToolbarView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:Kesmai.WorldForge.UI">
    <ToolBar ItemsSource="{Binding Tools, Source={StaticResource regionToolbar}}" 
             OverflowMode="Never">
        <ToolBar.ItemTemplate>
            <DataTemplate>
                <ToggleButton  Margin="1" Height="32" Width="32" FocusVisualStyle="{x:Null}"
                               Command="{Binding SelectToolCommand, Source={StaticResource regionToolbar}}"
                               CommandParameter="{Binding}" IsChecked="{Binding IsActive}">
                    <ToggleButton.ToolTip>
                        <TextBlock Text="{Binding Name}" FocusVisualStyle="{x:Null}"/>
                    </ToggleButton.ToolTip>
                    <Image Source="{Binding Icon}" FocusVisualStyle="{x:Null}" VerticalAlignment="Center" Height="26" Width="26" />
                </ToggleButton>
            </DataTemplate>
        </ToolBar.ItemTemplate>
    </ToolBar>
</UserControl>
