<UserControl x:Class="Kesmai.WorldForge.UI.Documents.SegmentBrushDocument"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:ui="clr-namespace:Kesmai.WorldForge.UI"
             xmlns:worldForge="clr-namespace:Kesmai.WorldForge"

             mc:Ignorable="d"
             
             d:DesignWidth="400" d:DesignHeight="300">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="300"></ColumnDefinition>
            <ColumnDefinition Width="*"></ColumnDefinition>
        </Grid.ColumnDefinitions>
        
        <Grid.RowDefinitions>
            <RowDefinition Height="*"></RowDefinition>
            <RowDefinition Height="Auto"></RowDefinition>
        </Grid.RowDefinitions>
        
        <ListBox x:Name="_entriesList" Grid.RowSpan="2"
                 SelectionMode="Single"
                 ItemsSource="{Binding ActiveContent.Entries, Source={StaticResource applicationPresenter}}">
            <ListBox.ContextMenu>
                <ContextMenu>
                    <MenuItem Header="Add Component" Click="OnAddComponentClick" />
                    <MenuItem Header="Delete Component" Click="OnDeleteComponentClick" />
                </ContextMenu>
            </ListBox.ContextMenu>
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"></ColumnDefinition>
                            <ColumnDefinition Width="Auto"></ColumnDefinition>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="*"></RowDefinition>
                            <RowDefinition Height="*"></RowDefinition>
                            <RowDefinition Height="*"></RowDefinition>
                            <RowDefinition Height="*"></RowDefinition>
                        </Grid.RowDefinitions>
                        
                        <Border Grid.RowSpan="3" BorderBrush="Black" BorderThickness="1">
                            <ui:TerrainComponentImage Provider="{Binding Component}" />
                        </Border>
                        
                        <TextBlock Grid.Column="1" Grid.Row="0" Text="{Binding Component, Converter={StaticResource objectToTypeConverter}}" 
                                   HorizontalAlignment="Stretch" TextAlignment="Center"
                                   FontSize="14" FontWeight="Bold" />
                        
                        <TextBlock Grid.Column="1" Grid.Row="1" Text="{Binding Component.Name}" 
                                   HorizontalAlignment="Stretch" TextAlignment="Center" />
                        
                        <StackPanel Grid.Column="1" Grid.Row="2" Orientation="Horizontal">
                            <TextBlock Text="Weight:" />
                            <TextBox x:Name="_weightTextBox" Width="80"
                                     Text="{Binding Weight}" />
                        </StackPanel>
                        
                        <TextBlock Grid.Column="1" Grid.Row="3" x:Name="_chanceTextBlock"
                                   HorizontalAlignment="Stretch" TextAlignment="Center"
                                   Foreground="Gray"
                                   Text="{Binding Chance, StringFormat='({0:P2})'}" />
                    </Grid>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>

        <Border Grid.Column="1" Grid.Row="0" Grid.RowSpan="2" Margin="4" BorderBrush="Black" BorderThickness="1">
            <worldForge:BrushPresentationTarget Brush="{Binding ActiveContent, Source={StaticResource applicationPresenter}}" />
        </Border>
    </Grid>
</UserControl>
