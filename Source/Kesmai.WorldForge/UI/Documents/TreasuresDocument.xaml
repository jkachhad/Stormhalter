<UserControl x:Class="Kesmai.WorldForge.UI.Documents.TreasuresDocument"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:scripting="clr-namespace:Kesmai.WorldForge.Scripting"
             xmlns:worldForge="clr-namespace:Kesmai.WorldForge"
             mc:Ignorable="d"
             d:DesignHeight="300" d:DesignWidth="300"
             
             FontFamily="Tahoma" FontSize="14">
    <UserControl.Resources>
        <BooleanToVisibilityConverter x:Key="booleanToVisibilityConverter" />
    </UserControl.Resources>
    
    <Border Margin="2" Grid.Column="1" BorderBrush="Black" BorderThickness="1">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"></RowDefinition>
                <RowDefinition Height="3"></RowDefinition>
                <RowDefinition Height="Auto"></RowDefinition>
                <RowDefinition Height="*"></RowDefinition>
            </Grid.RowDefinitions>
            
            <Border Grid.Row="0" Visibility="{Binding SelectedTreasureIsHoard, Converter={StaticResource booleanToVisibilityConverter}}">
                <TabControl ItemsSource="{Binding SelectedHoard.Scripts}" SelectedIndex="0" Margin="10">
                    <TabControl.ItemTemplate>
                        <DataTemplate>
                            <StackPanel Orientation="Horizontal" Margin="2">
                                <Image Source="..\..\Resources/CSharp-Script.png" Width="16" Height="16" />
                                
                                <TextBlock Text="{Binding Name}">
                                    <TextBlock.Style>
                                        <Style TargetType="TextBlock">
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding IsSelected, RelativeSource={RelativeSource AncestorType=TabItem}}" Value="True">
                                                    <Setter Property="FontWeight" Value="Bold"/>
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </TextBlock.Style>
                                </TextBlock>
                            </StackPanel>
                        </DataTemplate>
                    </TabControl.ItemTemplate>
                    
                    <TabControl.ContentTemplate>
                        <DataTemplate>
                            <scripting:ScriptEditor Signature="{Binding Signature}"
                                                    Header="{Binding Header}"
                                                    Body="{Binding Body, Mode=TwoWay}"
                                                    Footer="{Binding Footer}" 
                                                   
                                                    IsEnabled="{Binding IsEnabled}"
                                                    
                                                    Height="200" />
                        </DataTemplate>
                    </TabControl.ContentTemplate>
                </TabControl>
                
                <Border.Style>
                    <Style TargetType="Border">
                        <Style.Triggers>
                            <DataTrigger Binding="{Binding IsSelected, RelativeSource={RelativeSource AncestorType=DataGridRow}}" Value="True">
                                <Setter Property="Background" Value="LightGoldenrodYellow" />
                            </DataTrigger>
                        </Style.Triggers>
                    </Style>
                </Border.Style>
            </Border>
            
            <GridSplitter Grid.Row="1" Height="3" HorizontalAlignment="Stretch" />
            
            <ToolBar Padding="2" Grid.Row="2">
                <ToolBar.Items>
                    <Button Width="24" Height="24"
                            Command="{Binding AddTreasureEntryCommand}">
                        <Image Source="../../Resources/Add.png"/>
                    </Button>
                    <Button Width="24" Height="24"
                            Command="{Binding RemoveTreasureEntryCommand}"
                            CommandParameter="{Binding SelectedTreasureEntry}">
                        <Image Source="../../Resources/Delete.png" />
                    </Button>
                    <Separator />
                    <Button Width="24" Height="24"
                            Command="{Binding CopyTreasureEntryCommand}"
                            CommandParameter="{Binding SelectedTreasureEntry}">
                        <Image Source="../../Resources/Copy.png" />
                    </Button>
                </ToolBar.Items>
            </ToolBar>
            
            <DataGrid Grid.Row="3" ItemsSource="{Binding SelectedTreasure.Entries}"
                      SelectedItem="{Binding SelectedTreasureEntry}"
                      AutoGenerateColumns="False" SelectionMode="Single"
                      CanUserAddRows="false" CanUserDeleteRows="false"
                      RowDetailsVisibilityMode="Visible" AreRowDetailsFrozen="true">
            
                <DataGrid.Resources>
                    <Style TargetType="{x:Type DataGridRow}">
                        <Style.Triggers>
                            <Trigger Property="DataGridRow.IsSelected" Value="True">
                                <Setter Property="Background" Value="LightYellow" />
                                <Setter Property="BorderBrush" Value="Yellow" />
                                <Setter Property="Foreground" Value="Black" />
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                    <Style TargetType="{x:Type DataGridCell}">
                        <Style.Triggers>
                            <Trigger Property="DataGridCell.IsSelected" Value="True">
                                <Setter Property="Background" Value="LightGoldenrodYellow" />
                                <Setter Property="BorderBrush" Value="Yellow" />
                                <Setter Property="Foreground" Value="Black" />
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </DataGrid.Resources>
                
                <DataGrid.Columns>
                    <DataGridTextColumn Width="25" IsReadOnly="true" FontWeight="Bold"
                        Binding="{Binding RelativeSource={RelativeSource AncestorType=DataGridRow}, 
                        Converter={worldForge:DataGridRowToIndexConverter}}" />
                    
                    <DataGridTextColumn Header="Weight" Binding="{Binding Weight}" Width="100" />
                    <DataGridTextColumn Header="Chance" IsReadOnly="true" Width="100"
                                        Binding="{Binding Chance, StringFormat={}({0:0.00%})}" />
                </DataGrid.Columns>
                
                <DataGrid.RowDetailsTemplate>
                    <DataTemplate>
                        <Border>
                            <TabControl Grid.Column="0" Margin="10"
                                        ItemsSource="{Binding Scripts}">
                                <TabControl.ItemTemplate>
                                    <DataTemplate>
                                        <StackPanel Orientation="Horizontal" Margin="2">
                                            <CheckBox IsChecked="{Binding IsEnabled}" Margin="5,2" />
                                            <Image Source="..\..\Resources/CSharp-Script.png" Width="16" Height="16" />
                                            <TextBlock Text="{Binding Name}">
                                                <TextBlock.Style>
                                                    <Style TargetType="TextBlock">
                                                        <Style.Triggers>
                                                            <DataTrigger Binding="{Binding IsSelected, RelativeSource={RelativeSource AncestorType=TabItem}}" Value="True">
                                                                <Setter Property="FontWeight" Value="Bold"/>
                                                            </DataTrigger>
                                    
                                                            <DataTrigger Binding="{Binding IsEnabled}" Value="False">
                                                                <Setter Property="Foreground" Value="Gray"/>
                                                            </DataTrigger>
                                                        </Style.Triggers>
                                                    </Style>
                                                </TextBlock.Style>
                                            </TextBlock>
                                        </StackPanel>
                                    </DataTemplate>
                                </TabControl.ItemTemplate>
                                
                                <TabControl.ContentTemplate>
                                    <DataTemplate>
                                        <scripting:ScriptEditor Signature="{Binding Signature}"
                                                                Header="{Binding Header}"
                                                                Body="{Binding Body, Mode=TwoWay}"
                                                                Footer="{Binding Footer}" 
                                                   
                                                                IsEnabled="{Binding IsEnabled}"
                                                                
                                                                Height="100" MaxHeight="300" />
                                    </DataTemplate>
                                </TabControl.ContentTemplate>
                            </TabControl>
                            
                            <Border.Style>
                                <Style TargetType="Border">
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding IsSelected, RelativeSource={RelativeSource AncestorType=DataGridRow}}" Value="True">
                                            <Setter Property="Background" Value="LightGoldenrodYellow" />
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </Border.Style>
                        </Border>
                    </DataTemplate>
                </DataGrid.RowDetailsTemplate>
            </DataGrid>
        </Grid>
    </Border>
</UserControl>
