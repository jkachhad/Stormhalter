<UserControl x:Class="Kesmai.WorldForge.UI.Documents.TreasuresDocument"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:documents="clr-namespace:Kesmai.WorldForge.UI.Documents"
             xmlns:editor="clr-namespace:Kesmai.WorldForge.Editor"
             mc:Ignorable="d"
             d:DesignHeight="300" d:DesignWidth="300"
             FontFamily="Tahoma" FontSize="14">
    <UserControl.Resources>
        <DataTemplate DataType="{x:Type editor:SegmentHoard}">
            <documents:HoardDocument DataContext="{Binding DataContext, RelativeSource={RelativeSource AncestorType=ContentControl}}" />
        </DataTemplate>
        <DataTemplate DataType="{x:Type editor:SegmentTreasure}">
            <documents:TreasureDocument DataContext="{Binding DataContext, RelativeSource={RelativeSource AncestorType=ContentControl}}" />
        </DataTemplate>
    </UserControl.Resources>

    <ContentControl Content="{Binding ActiveContent, Source={StaticResource applicationPresenter}}"
                    HorizontalContentAlignment="Stretch"
                    VerticalContentAlignment="Stretch" />
</UserControl>
