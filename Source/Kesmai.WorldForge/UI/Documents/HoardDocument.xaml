<UserControl x:Class="Kesmai.WorldForge.UI.Documents.HoardDocument"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:scripting="clr-namespace:Kesmai.WorldForge.Scripting"
             xmlns:worldForge="clr-namespace:Kesmai.WorldForge"
             mc:Ignorable="d"
             d:DesignHeight="300" d:DesignWidth="300"
             FontFamily="Tahoma" FontSize="14">
    <UserControl.Resources>
        <BooleanToVisibilityConverter x:Key="booleanToVisibilityConverter" />
    </UserControl.Resources>

    <Border Margin="2" BorderBrush="Black" BorderThickness="1">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"></RowDefinition>
                <RowDefinition Height="Auto"></RowDefinition>
                <RowDefinition Height="3"></RowDefinition>
                <RowDefinition Height="Auto"></RowDefinition>
                <RowDefinition Height="*"></RowDefinition>
            </Grid.RowDefinitions>
            
            <Border Grid.Row="0"
                    Visibility="{Binding ActiveContent.IsHoard,
                        Source={StaticResource applicationPresenter},
                        Converter={StaticResource booleanToVisibilityConverter}}">
                <TabControl ItemsSource="{Binding ActiveContent.Scripts, Source={StaticResource applicationPresenter}}"
                            Margin="10">
                    <TabControl.ItemTemplate>
                        <DataTemplate>
                            <StackPanel Orientation="Horizontal" Margin="2">
                                <Image Source="..\..\Resources/CSharp-Script.png" Width="16" Height="16" />

                                <TextBlock Text="{Binding Name}">
                                    <TextBlock.Style>
                                        <Style TargetType="TextBlock">
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding IsSelected, RelativeSource={RelativeSource AncestorType=TabItem}}" Value="True">
                                                    <Setter Property="FontWeight" Value="Bold"/>
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </TextBlock.Style>
                                </TextBlock>
                            </StackPanel>
                        </DataTemplate>
                    </TabControl.ItemTemplate>

                    <TabControl.ContentTemplate>
                        <DataTemplate>
                            <scripting:ScriptEditor Signature="{Binding Signature}"
                                                    Header="{Binding Header}"
                                                    Body="{Binding Body, Mode=TwoWay}"
                                                    Footer="{Binding Footer}"
                                                    IsEnabled="{Binding IsEnabled}"
                                                    Height="200" />
                        </DataTemplate>
                    </TabControl.ContentTemplate>
                </TabControl>

                <Border.Style>
                    <Style TargetType="Border">
                        <Style.Triggers>
                            <DataTrigger Binding="{Binding IsSelected, RelativeSource={RelativeSource AncestorType=DataGridRow}}" Value="True">
                                <Setter Property="Background" Value="LightGoldenrodYellow" />
                            </DataTrigger>
                        </Style.Triggers>
                    </Style>
                </Border.Style>
            </Border>

            <GridSplitter Grid.Row="1" Height="3" HorizontalAlignment="Stretch" />
            
            <ToolBarTray Grid.Row="3">
                <ToolBar Band="0" BandIndex="0">
                    <Button Command="{Binding AddEntryCommand}"
                            ToolTip="Add entry">
                        <Image Source="..\..\Resources\Add.png" Width="24" Height="24" />
                    </Button>
                    <Button Command="{Binding RemoveEntryCommand}"
                            ToolTip="Delete entry">
                        <Image Source="..\..\Resources\Delete.png" Width="24" Height="24" />
                    </Button>
                </ToolBar>
            </ToolBarTray>

            <DataGrid Grid.Row="4"
                      ItemsSource="{Binding ActiveContent.Entries, Source={StaticResource applicationPresenter}}"
                      SelectionMode="Single" SelectionUnit="FullRow"
                      SelectedItem="{Binding SelectedTreasureEntry}"
                      AutoGenerateColumns="False"
                      CanUserAddRows="False" CanUserDeleteRows="False" CanUserResizeRows="False"
                      CanUserResizeColumns="True" CanUserSortColumns="False"
                      HeadersVisibility="Column"
                      RowDetailsVisibilityMode="Visible" AreRowDetailsFrozen="true"
                      Margin="5">

                <DataGrid.Resources>
                    <Style TargetType="{x:Type DataGridRow}">
                        <Style.Triggers>
                            <Trigger Property="DataGridRow.IsSelected" Value="True">
                                <Setter Property="Background" Value="LightYellow" />
                                <Setter Property="BorderBrush" Value="Yellow" />
                                <Setter Property="Foreground" Value="Black" />
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                    
                    <Style TargetType="{x:Type DataGridCell}">
                        <Style.Triggers>
                            <Trigger Property="DataGridCell.IsSelected" Value="True">
                                <Setter Property="Background" Value="LightGoldenrodYellow" />
                                <Setter Property="BorderBrush" Value="Yellow" />
                                <Setter Property="Foreground" Value="Black" />
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </DataGrid.Resources>

                <DataGrid.Columns>
                    <DataGridTextColumn Width="25" IsReadOnly="true" FontWeight="Bold"
                                        Binding="{Binding RelativeSource={RelativeSource AncestorType=DataGridRow},
                                                          Converter={worldForge:DataGridRowToIndexConverter}}" />

                    <DataGridTextColumn Header="Weight" Binding="{Binding Weight}" Width="100" />
                    <DataGridTextColumn Header="Chance" IsReadOnly="true" Width="100"
                                        Binding="{Binding Chance, StringFormat={}({0:0.00%})}" />
                </DataGrid.Columns>

                <DataGrid.RowDetailsTemplate>
                    <DataTemplate>
                        <Border>
                            <TabControl Grid.Column="0" Margin="10"
                                        ItemsSource="{Binding Scripts}">
                                <TabControl.ItemTemplate>
                                    <DataTemplate>
                                        <StackPanel Orientation="Horizontal" Margin="2">
                                            <CheckBox IsChecked="{Binding IsEnabled}" Margin="5,2" />
                                            <Image Source="..\..\Resources/CSharp-Script.png" Width="16" Height="16" />
                                            <TextBlock Text="{Binding Name}">
                                                <TextBlock.Style>
                                                    <Style TargetType="TextBlock">
                                                        <Style.Triggers>
                                                            <DataTrigger Binding="{Binding IsSelected, RelativeSource={RelativeSource AncestorType=TabItem}}" Value="True">
                                                                <Setter Property="FontWeight" Value="Bold"/>
                                                            </DataTrigger>

                                                            <DataTrigger Binding="{Binding IsEnabled}" Value="False">
                                                                <Setter Property="Foreground" Value="Gray"/>
                                                            </DataTrigger>
                                                        </Style.Triggers>
                                                    </Style>
                                                </TextBlock.Style>
                                            </TextBlock>
                                        </StackPanel>
                                    </DataTemplate>
                                </TabControl.ItemTemplate>

                                <TabControl.ContentTemplate>
                                    <DataTemplate>
                                        <scripting:ScriptEditor Signature="{Binding Signature}"
                                                                Header="{Binding Header}"
                                                                Body="{Binding Body, Mode=TwoWay}"
                                                                Footer="{Binding Footer}"
                                                                IsEnabled="{Binding IsEnabled}"
                                                                Height="100" MaxHeight="300" />
                                    </DataTemplate>
                                </TabControl.ContentTemplate>
                            </TabControl>

                            <Border.Style>
                                <Style TargetType="Border">
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding IsSelected, RelativeSource={RelativeSource AncestorType=DataGridRow}}" Value="True">
                                            <Setter Property="Background" Value="LightGoldenrodYellow" />
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </Border.Style>
                        </Border>
                    </DataTemplate>
                </DataGrid.RowDetailsTemplate>
            </DataGrid>
        </Grid>
    </Border>
</UserControl>
